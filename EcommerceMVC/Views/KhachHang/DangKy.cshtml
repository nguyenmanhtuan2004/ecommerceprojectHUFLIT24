@model EcommerceMVC.Models.ViewModels.RegisterVM
@{
    ViewData["Title"] = "Đăng ký";
}
<div class="container py-5">
    <h1 class="mb-4 text-primary fw-bold">Đăng ký Thành viên</h1>
     <form asp-action="DangKy" asp-controller="KhachHang" enctype="multipart/form-data">
        <div class="row ">
            <div class="row">
                <div class="col-md-12 col-lg-6">
                    <div class="form-item w-100">
                        <label asp-for="@Model.MaKh" class="form-label my-3 text-primary fw-bold" style="font-size:1.05rem"></label><sup>*</sup>
                        <input asp-for="@Model.MaKh" type="text" class="form-control" style="font-size:1.05rem">
                        <span asp-validation-for="@Model.MaKh" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-12 col-lg-6">
                    <div class="form-item w-100">
                        <label asp-for="@Model.MatKhau" class="form-label my-3 text-primary fw-bold" style="font-size:1.05rem"></label><sup>*</sup>
                        <input asp-for="@Model.MatKhau" type="text" class="form-control" style="font-size:1.05rem">
                        <span asp-validation-for="@Model.MatKhau" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-item">
                    <label class="form-label my-3 text-primary fw-bold" asp-for="@Model.HoTen" style="font-size:1.05rem"></label><sup>*</sup>
                    <input asp-for="@Model.HoTen" class="form-control" style="font-size:1.05rem" />
                    <span asp-validation-for="@Model.HoTen" class="text-danger"></span>
                </div>
                <div class="form-check my-3">
                    <input asp-for="@Model.GioiTinh" class="form-check-input" style="font-size:1.05rem">
                    <label class="form-check-label text-primary fw-bold" for="GioiTinh" style="font-size:1.05rem">Nam?</label>
                </div>
                <div class="form-item">
                    <label class="form-label my-3 text-primary fw-bold" asp-for="@Model.NgaySinh" style="font-size:1.05rem"></label><sup>*</sup>
                    <input asp-for="@Model.NgaySinh" class="form-control" style="font-size:1.05rem" />
                    <span asp-validation-for="@Model.NgaySinh" class="text-danger"></span>
                </div>
                <div class="form-item">
                    <label class="form-label my-3 text-primary fw-bold" asp-for="@Model.DiaChi" style="font-size:1.05rem"></label><sup>*</sup>
                    <input asp-for="@Model.DiaChi" class="form-control" style="font-size:1.05rem" />
                    <span asp-validation-for="@Model.DiaChi" class="text-danger"></span>
                </div>
                 <div class="form-item">
                    <label class="form-label my-3 text-primary fw-bold" asp-for="@Model.DienThoai" style="font-size:1.05rem"></label><sup>*</sup>
                    <input asp-for="@Model.DienThoai" class="form-control" style="font-size:1.05rem" />
                    <span asp-validation-for="@Model.DienThoai" class="text-danger"></span>
                </div>
                <div class="form-item">
                    <label class="form-label my-3 text-primary fw-bold" asp-for="@Model.Email" style="font-size:1.05rem"></label><sup>*</sup>
                    <input asp-for="@Model.Email" class="form-control" style="font-size:1.05rem" />
                    <span asp-validation-for="@Model.Email" class="text-danger"></span>
                </div>
                <div class="form-item">
                    <label class="form-label my-3 text-primary fw-bold" for="Hinh" style="font-size:1.05rem">Hình</label><sup>*</sup>
                    <input type="file" name="Hinh" class="form-control" style="font-size:1.05rem" />
                </div>
            </div>
            <div class="row g-4 text-center align-items-center justify-content-center pt-4">
                <button type="submit" class="btn border-secondary py-2 px-3 text-uppercase w-100 text-white" style="background-color:#B22222;font-size:1rem">Đăng ký</button>
            </div>
        </div>
     </form>
</div>

